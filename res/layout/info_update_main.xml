<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 顶部保存和返回按钮 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF6000"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/info_add_iv_back"
            android:layout_width="36dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/info_add_iv_save"
                android:layout_width="36dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_save" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/info_add_et_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="标题"
        android:maxLength="500"
        android:singleLine="false"
        android:textColor="#000000"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/info_add_et_context"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_=""
            android:hint="@string/info_add_str_add"
            android:maxLength="500"
            android:singleLine="false"
            android:textColor="#000000"
            android:textSize="15sp" />
        <!-- 网格显示图片 行列间距5dp 每列宽度90dp -->

        <GridView
            android:id="@+id/info_add_gv_images"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:background="#EFDFDF"
            android:columnWidth="90dp"
            android:gravity="center"
            android:horizontalSpacing="5dp"
            android:numColumns="4"
            android:stretchMode="columnWidth"
            android:verticalSpacing="5dp" >
        </GridView>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="(友情提示:只能添加8张图片,长按图片可以删除已添加图片)"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/msg_add_et_context"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:hint="@string/msg_add_str_add"
            android:maxLength="100"
            android:singleLine="false"
            android:textColor="#000000"
            android:textSize="10sp" />

        <Button
            android:id="@+id/msg_post_bt_context"
            android:layout_width="odp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="留言" />
    </LinearLayout>

    <ListView
        android:id="@+id/msg_item_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="@drawable/listview_item_bg"
        android:overScrollMode="never"
        android:visibility="gone" >
    </ListView>

</LinearLayout>